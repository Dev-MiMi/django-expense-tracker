/* FILE: static/css/base.css */
:root{
  --bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* Changed overall bg to a beautiful purple-blue gradient */
  --card: rgba(255, 255, 255, 0.95); /* Soft white with transparency for overlay effect */
  --muted: #8b9dc3; /* Softer muted blue-gray for better contrast on new bg */
  --accent-start: #a855f7; /* Deeper magenta for vibrancy */
  --accent-end: #3b82f6; /* Brighter blue */
  --accent-2: #10b981; /* Green remains */
  --shadow: 0 20px 40px rgba(0,0,0,0.1); /* Softer, deeper shadow */
  --radius: 20px; /* Slightly larger radius for modern feel */
  --max-width: 1200px; /* Wider for desktop */
}

*{box-sizing:border-box}
html,body{height:100%;margin:0;font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,'Helvetica Neue',Arial}
body{background:var(--bg);color:#1e293b;-webkit-font-smoothing:antialiased; position:relative; overflow-x:hidden;}

.page-wrap{max-width:var(--max-width);margin:0 auto;padding:2rem 1rem;}

/* HERO */
.hero{display:block; padding: 4rem 0;}
.hero-inner{display:grid;grid-template-columns:1fr 1fr;gap:4rem;align-items:center;}
.hero-visual{justify-self:center;}
.hero-img{max-width:100%;height:auto;filter:drop-shadow(0 20px 40px rgba(0,0,0,0.15)); border-radius:var(--radius); max-height:400px; object-fit:contain;} /* Added for better logo scaling */

.hero-card{background:var(--card);backdrop-filter:blur(10px);border-radius:var(--radius);box-shadow:var(--shadow);padding:3rem; position:relative; z-index:1;}
.title{margin:0 0 1rem;font-size:2.5rem;line-height:1.1; color:#1e293b;}
.brand{background:linear-gradient(90deg,var(--accent-start),var(--accent-end));-webkit-background-clip:text;background-clip:text;color:transparent;font-weight:700}
.subtitle{color:var(--muted);margin:0 0 2rem; font-size:1.1rem; line-height:1.6;}

.features{display:grid;grid-template-columns:repeat(auto-fit,minmax(250px,1fr));gap:1.5rem;margin-bottom:2rem;}
.feature{display:flex;gap:1rem;align-items:center;padding:1.5rem;background:linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(59, 130, 246, 0.1));border:1px solid rgba(168,85,247,0.2);border-radius:var(--radius); transition:transform 0.3s ease, box-shadow 0.3s ease;}
.feature:hover{transform:translateY(-5px); box-shadow:0 15px 30px rgba(168,85,247,0.2);}
.feature .icon{width:50px;height:50px;border-radius:12px;background:linear-gradient(135deg,var(--accent-start),var(--accent-end));display:flex;align-items:center;justify-content:center;color:white;font-size:1.2rem; flex-shrink:0;}
.feature h4{margin:0 0 0.5rem;font-size:1.1rem; color:#1e293b;}
.feature p{margin:0;color:var(--muted);font-size:0.95rem;}

.cta-row{display:flex;gap:1rem;align-items:center; justify-content:flex-start;}
.btn-primary{display:inline-block;padding:1rem 2rem;border-radius:50px;background:linear-gradient(135deg,var(--accent-start),var(--accent-end));color:white;text-decoration:none;font-weight:600;box-shadow:0 10px 25px rgba(168,85,247,0.3); transition:all 0.3s ease; position:relative; overflow:hidden;}
.btn-primary::before{content:'';position:absolute;top:0;left:-100%;width:100%;height:100%;background:linear-gradient(90deg,transparent, rgba(255,255,255,0.2), transparent);transition:left 0.5s;}
.btn-primary:hover{transform:translateY(-2px); box-shadow:0 15px 35px rgba(168,85,247,0.4);}
.btn-primary:hover::before{left:100%;}

/* PROMO block - Updated without button */
.promo{margin:3rem 0;background:linear-gradient(135deg, rgba(255,255,255,0.2), rgba(255,255,255,0.1));backdrop-filter:blur(10px);padding:3rem;border-radius:var(--radius); text-align:center;}
.promo-inner{max-width:700px;margin:0 auto;}
.promo-inner h2{margin:0 0 1rem;font-size:2rem; color:#1e293b;}
.promo-inner p{color:var(--muted);margin:0; font-size:1.1rem; line-height:1.6;}

/* Enhanced background dots with animation */
.bg-dots{position:fixed;left:0;top:0;width:100%;height:100%;background-image:radial-gradient(2px 2px at 20px 30px, rgba(255,255,255,0.1), transparent), radial-gradient(2px 2px at 40px 70px, rgba(168,85,247,0.1), transparent);background-size:60px 90px;pointer-events:none;opacity:0.8; z-index:-1; animation:float 25s infinite linear;}
@keyframes float{0%{transform:translateY(0) rotate(0deg);} 100%{transform:translateY(-30px) rotate(360deg);}}

/* responsiveness */
@media (max-width:900px){
  .hero-inner{grid-template-columns:1fr; gap:2rem; text-align:center;}
  .features{grid-template-columns:1fr;}
  .hero-card{padding:2rem;}
}

@media (max-width:520px){
  .page-wrap{padding:1rem;}
  .title{font-size:2rem;}
  .promo{padding:2rem;}
}
